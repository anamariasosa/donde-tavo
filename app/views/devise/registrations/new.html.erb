<div class="col-sm-6 col-sm-offset-3">
      <h1>Registro</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <label class="control-label" for="email">Correo electr칩nico:</label>
          <%= f.email_field :email, autofocus: true, class:"form-control input-lg" , id:"email"%>
        </div>
        <div class="form-group">
          <label class="control-label" for="password">Contrase침a:</label>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres minimo)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "on", class: "form-control input-lg", id: "password", placeholder: "Ingresa una contrase침a" %>
        </div>
        <div class="form-group">
          <label class="control-label" for="password_r">Confirma Contrase침a:</label>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", id: "password_r" %>
        </div>
        <div class="action text-right">
          <%= f.submit "Registrarse", class:"btn btn-primary btn-block btn-lg" %>
        </div>
      </form>
    </div>
<% end %>
