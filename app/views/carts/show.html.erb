<div>
  <h1 class="text-center">Carrito de compras <span class="glyphicon glyphicon-shopping-cart"></span></h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Precio Unidad</th>
        <th>Precio Total</th>
      </tr>
    </thead>
    <% if Product.count > 0 %>
      <% @cart.items.each do |item| %>
        <tr>
          <td>
            <%= image_tag item.product.image.thumb %>
          </td>
          <td>
            <%= item.quantity %>
          </td>

          <td>
            <%= number_to_currency(item.product.price, precision: 0)%>
          </td>
          <td>
            <%= number_to_currency(item.total_price, precision: 0)  %>
          </td>
        </tr>
      <% end %>
    <% end %>
    <tfoot>
      <tr>
        <td>
          <strong>
            Total a pagar:
            <%= number_to_currency(@cart.total_price, precision: 0) %>
          </strong>
        </td>
      </tr>
    </tfoot>
  </table>

</div>
