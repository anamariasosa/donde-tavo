<div class="row thumbnails__container">
    <% if @products.count == 0 %>
      <div class="alert alert-danger" role="alert">
        <p>
          No hay productos
        </p>
      </div>
    <% end %>
    <% @products.each do |product| %>
    <div class="col-xs-6 col-sm-4 col-md-4">
      <div class="thumbnail">
        <%= image_tag product.image.thumb  %>
        <div class="caption">
          <h3><%= product.name %></h3>
          <p>
              <p class="cart__button btn btn-primary"><%= number_to_currency(product.price, precision: 0)%><span class="glyphicon glyphicon-shopping-cart"></span></p>

            <%= link_to 'Detalles', product, class:"btn btn-default" %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
</div>
