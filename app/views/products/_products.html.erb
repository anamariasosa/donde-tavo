<div class="row thumbnails__container">
    <% if @products.count == 0 %>
      <div class="alert alert-danger" role="alert">
        <p>
          No hay productos
        </p>
      </div>
    <% end %>
    <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
      <div class="thumbnail">
        <%= image_tag product.image.thumb  %>
        <div class="caption">
          <h3><%= product.name %></h3>
          <p>
            <b>Precio:</b>
            <%= number_to_currency(product.price, precision:0) %>
          </p>
          <p>
            <%= link_to 'Ver mÃ¡s', product, class:"btn btn-default" %>
          </p>
        </div>
      </div>
    </div>
    <% end %>
</div>
