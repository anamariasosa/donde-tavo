<h1>Productos Disponibles</h1>
<% if @products.count == 0 %>
  <div class="alert alert-danger" role="alert">
    <p>
      No hay productos disponibles
    </p>
  </div>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Imagen</th>
        <th>Precio</th>
        <th>Cantidad</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= wicked_pdf_image_tag product.image.thumb, class:"image_pdf"  %>
        </td>
        <td>
          <%= number_to_currency(product.price, precision: 0)%>
        </td>
        <td>
          <%= product.quantity %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
</div>

<h1>Productos Eliminados</h1>
