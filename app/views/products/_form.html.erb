<%= form_for @product, :html => { :multipart => true } do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <label class="control-label">Nombre:</label>
        <%= f.text_field :name , class:"form-control input-lg" %>
      </div>
      <div class="form-group">
        <label class="control-label">Precio:</label>
        <%= f.number_field :price , class:"form-control input-lg" %>
      </div>
      <div class="form-group">
        <label class="control-label">Cantidad:</label>
        <%= f.number_field :quantity , class:"form-control input-lg" %>
      </div>
      <div class="form-group">
          <label class="control-label">Categor√≠a:</label>
          <br>
          <%= f.select :category_id, Category.all.map { |c| [ c.name, c.id ]}, {}, {required: 'true', autofocus: 'true', class: 'form-control input-lg'}  %>
      </div>
      <div class="form-group">
        <label class="control-label">Proveedor:</label>
        <br>
        <%= f.select :supplier_id, Supplier.all.map { |c| [ c.name, c.id ]}, {}, {required: 'true', autofocus: 'true', class: 'form-control input-lg'} %>
      </div>
      <div class="form-group">
        <label class="control-label">Imagen:</label>
        <label class="btn btn-default btn-file">
          Buscar <%= f.file_field :image %>
        </label>
      </div>
      <div class="action text-right">
        <%= f.submit "Guardar", class:"btn btn-primary btn-block btn-lg" %>
      </div>
<% end %>
<br>
